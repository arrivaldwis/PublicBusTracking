<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f9f8f8"
    android:orientation="vertical"
    tools:context="com.example.vikar.publicbustracking.fragment.ProfileUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1ce192"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="MY PROFILE"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

<LinearLayout
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#dfd8d8">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/tv_id"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:hint="User ID"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    />

                <EditText
                    android:id="@+id/tv_name"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:hint="Name"
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tv_phone"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:inputType="number"
                    android:hint="Phone Number"
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tv_email"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="#fff"
                    android:hint="Email"
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btnlogoutdriver"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#f43e38"
                    android:text="SIGN OUT"
                    android:textColor="#fff"
                    android:textStyle="bold"

                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Supported By:"
    android:textSize="10dp"
    android:textAlignment="center"/>

<ImageView
    android:layout_width="130dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:scaleType="fitXY"
    android:src="@drawable/bit_mercu1"/>
</LinearLayout>
