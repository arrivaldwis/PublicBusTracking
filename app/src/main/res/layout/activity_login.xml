<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f8f8"
    android:orientation="vertical"
    tools:context="com.example.vikar.publicbustracking.activity.login">

    <LinearLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/pbt"
                android:layout_margin="10dp"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#dfd8d8">

            <TextView
                android:gravity="left|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1ce192"
                android:text="\t\tLogin"
                android:textStyle="bold"
                android:textSize="18dp"
                />

            <EditText
                android:id="@+id/txtusername"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:background="#fff"
                android:hint="Username"
                android:textSize="16dp"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/txtpassword"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:background="#fff"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="16dp"
                android:textAlignment="center"/>

            <CheckBox
                android:id="@+id/showpasslogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Password"
                android:textSize="12dp"
                android:layout_marginLeft="23dp"/>

            <Button
                android:id="@+id/btnlogin"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:text="LOGIN"
                android:textStyle="bold"
                android:textColor="#fff"
                android:backgroundTint="#3fffb2"

                />
            <TextView
                android:id="@+id/btnsignup"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Sign Up"
                android:textColor="#ff1100"
                android:textStyle="bold"
                />


        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supported By:"
        android:textSize="10dp"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/bit_mercu1"/>

</LinearLayout>